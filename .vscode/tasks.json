{
	"version": "2.0.0",
	"tasks": [
		{
			"group": "build",
			"label": "debug",
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"group": "build",
			"label": "release",
			"type": "cargo",
			"command": "build",
			"args": [
                "--release"
            ],
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"group": "build",
			"label": "run",
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"group": "build",
			"label": "check",
			"type": "cargo",
			"command": "check",
			"problemMatcher": [
				"$rustc"
			]
		}
	]
}